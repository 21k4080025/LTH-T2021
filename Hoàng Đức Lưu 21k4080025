using System;


namespace bt6
{
    internal class Program
    {
        static void Main(string[] args)

        {
            Console.OutputEncoding=System.Text.Encoding.Unicode;
            Console.Write("Nhập số tiền (Là bội số của 50,000): ");
            int t = int.Parse(Console.ReadLine());

            if (t % 50000 != 0)
            {
                Console.WriteLine("Số tiền không hợp lệ. Vui lòng nhập số tiền là bội số của 50,000.");
                return;
            }

            int[] MenhGia = { 500000, 200000, 100000, 50000 };
            int count;

            Console.WriteLine($"Số tiền cần đổi: {t}");

            for (int i = 0; i < MenhGia.Length; i++)
            {
                count = t / MenhGia[i];

                if (count > 0)
                {
                    Console.WriteLine($"{MenhGia[i]} = {count} tờ");
                    t %= MenhGia[i];
                }
            }
        }
    }
}
