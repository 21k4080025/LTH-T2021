using System;


namespace bt7
{
    internal class Program
    {
        static void Main(string[] args)
        {
            Console.OutputEncoding=System.Text.Encoding.Unicode;
            
                Console.Write("Nhập chỉ số điện kWh: ");
                double ChiSoDien = double.Parse(Console.ReadLine());

                double GiaBanDien = TinhTienDien(ChiSoDien);
                double ThueVAT = 0.1 * GiaBanDien;
                double TongTien = GiaBanDien + ThueVAT;

                Console.WriteLine($"Tổng tiền thanh toán: {TongTien:C}");
            }

            static double TinhTienDien(double ChiSoDien)
            {
                double GiaBanDien = 0;

                if (ChiSoDien >= 1 && ChiSoDien <= 50)
                    GiaBanDien = ChiSoDien * 1484;
                else 
                
                    if (ChiSoDien >= 51 && ChiSoDien <= 100)
                    GiaBanDien = ChiSoDien * 1533;
                else 
                if (ChiSoDien >= 101 && ChiSoDien <= 200)
                    GiaBanDien = ChiSoDien * 1786;
                else 
                if (ChiSoDien >= 201 && ChiSoDien <= 300)
                    GiaBanDien = ChiSoDien * 2242;
                else 
                if (ChiSoDien >= 301 && ChiSoDien <= 400)
                    GiaBanDien = ChiSoDien * 2503;
                else
                if (ChiSoDien >= 401)
                    GiaBanDien = ChiSoDien * 2587;

                return GiaBanDien;
            }
        }

    }


