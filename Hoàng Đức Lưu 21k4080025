using System;
namespace bt5
{
    class program
    {
        static void Main()
        {
            Console.OutputEncoding=System.Text.Encoding.Unicode;
            Console.WriteLine("Nhập điểm trung bình của học sinh:");
            double ĐTB = double.Parse(Console.ReadLine());
            string XepLoai = " ";
            if(ĐTB >= 9.0)
            {
                XepLoai="Xuất Sắc";
            }    
            else
                if ( ĐTB<9.0 && ĐTB >= 8.0)
            {
                XepLoai="Giỏi";
            }    
            else
                if(ĐTB >=6.5 && ĐTB<8.0)
                {
                XepLoai="Khá";
            }
            else
                if (ĐTB>=5.0  && ĐTB<6.5)
            {
                XepLoai="Trung Bình";
            }    
            else
                if(ĐTB>=3.5 &&  ĐTB <5.0)
            {
                XepLoai ="Yếu";
            }    
            else
                if(ĐTB<3.5)
            {
                XepLoai="Kém";
            }    
            Console.WriteLine("Xếp loại học sinh"+XepLoai);

        }
    }

}
